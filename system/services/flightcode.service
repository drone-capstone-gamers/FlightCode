[Unit]
Description=Firedrone_Flightcode
After=network.target
StartLimitIntervalSec=0
[Service]
Type=exec

User=firedrone
ExecStart=source /home/firedrone/FlightCode/config.env && /home/firedrone/FlightCode/target/release/flightcode

WorkingDirectory=/home/firedrone/FlightCode/

[Install]
WantedBy=multi-user.target
